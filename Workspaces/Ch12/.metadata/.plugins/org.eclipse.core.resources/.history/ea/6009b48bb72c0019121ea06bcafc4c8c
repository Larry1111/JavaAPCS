
public abstract class Poem {	
		public abstract int numLines();
		
		public abstract int getSyllables(int k);
		
		public void printRhythm() {
			for ( int l = 1 ; l <= numLines() ; l++ ) {
				for ( int j = 1 ; j <= getSyllables(l) ; j++ ) {
					System.out.print("ta");
					if ( j < getSyllables(l) ) {
						System.out.print("-");
					} else {
						System.out.println();
					}
				}
			}
		}
}

