import java.awt.BorderLayout;
import java.awt.Container;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class SlideShow extends JFrame{
	private ControlPanel obj;
	private ImagePanel obj2;
	public SlideShow() 
	{	
		obj2 = new ImagePanel();
		obj = new ControlPanel(obj2);
		
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		JPanel contentPane = new JPanel(new BorderLayout());
		contentPane.add(obj2, BorderLayout.CENTER);
		contentPane.add(obj, BorderLayout.SOUTH);
	}
	
	public void giveFocusToControlPanel()
	{
		 
	}
	public static void main(String[] args)
	{
		JFrame window = new JFrame("Slide Show");
		window.setLocation(200,300);
		window.setBounds(200, 300, 1000, 1100);
		window.setVisible(true);
//		giveFocusToControlPanel();
		
	}
}
