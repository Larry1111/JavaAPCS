import java.awt.Container;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class SlideShow extends JFrame{
	private ControlPanel obj;
	private ImagePanel obj2;
	public SlideShow(String path) 
	{
		obj2 = new ImagePanel();
		obj = new ControlPanel(obj2,path);
		Container contentPane = getContentPane();
		contentPane.add(obj);
		contentPane.add(obj2);
	}
	
	public void giveFocusToControlPanel()
	{
		 
	}
	public static void main(String[] args)
	{
		JFrame window = new JFrame("Slide Show");
		window.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		window.setLocation(200,300);
		window.setBounds(200, 300, 1000, 1100);
		window.setVisible(true);
//		giveFocusToControlPanel();
		
	}
}
