import java.awt.BorderLayout;
import java.awt.Container;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class SlideShow extends JFrame{
	private ControlPanel obj;
	private ImagePanel obj2;
	public SlideShow() 
	{	
		obj2 = new ImagePanel();
		obj = new ControlPanel(obj2,"images");
		setTitle("Slide Show");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setSize(1000, 800);
		setVisible(true);
		JPanel contentPane = new JPanel(new BorderLayout());
		contentPane.add(obj2, BorderLayout.CENTER);
		contentPane.add(obj, BorderLayout.SOUTH);
	}
	
	public void giveFocusToControlPanel()
	{
		 
	}
	public static void main(String[] args)
	{
		JFrame window = new JFrame();
		window.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		window.setLocation(20,20);
		window.setVisible(true);
//		giveFocusToControlPanel();
		
	}
}
