import java.awt.BorderLayout;
import java.awt.Container;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class SlideShow extends JPanel{
	private  ControlPanel obj;
	private  ImagePanel obj2;
	public SlideShow() 
	{	
		obj2 = new ImagePanel();
		obj = new ControlPanel(obj2,"images");
		
	}
	
	public void giveFocusToControlPanel()
	{
		 
	}
	public static void main(String[] args)
	{
		JFrame window = new JFrame("Slide Show");
		window.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		window.setLocation(20,20);
		window.setBounds(200, 300, 1000, 800);
		Container c = window.getContentPane();
		c.add(new SlideShow());
		
		window.setVisible(true);
//		giveFocusToControlPanel();
		
	}
}
