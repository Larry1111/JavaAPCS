
public class mersennePrimes {
	public static void mersennePrime() {
		int counter = 0;

	    for (int i = 2; counter < 6; i++) {
	        int val = (int) Math.pow(2, i) - 1;
	        if (isPrime(val)) {
	            System.out.printf("2^%d - 1 (%d)%n", i, val);
	            counter++;
	        }
	    }
	public static void main(String[] args) {
		mersennePrime();
	}
}
