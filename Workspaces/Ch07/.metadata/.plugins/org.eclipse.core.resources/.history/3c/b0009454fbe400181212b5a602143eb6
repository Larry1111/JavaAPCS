import java.util.Scanner;

public class Perf {
	public static void perfNum(int n) {
		  int sum=0;
		  n = 6;
		  while(n<=28) {
		  for(int i = 1;i < n; i++) {
			  if(n%i ==0) {
				  sum = sum+i;
			  }
			  if(sum==n) {
				  System.out.print(n);
			  }
			  n++;
		  }
		  }
	  }
	public static void main(String[] args) {
		System.out.println("Enter an integer: ");
		Scanner k = new Scanner(System.in);
		int n = k.nextInt();
		perfNum(n);
	}
}
